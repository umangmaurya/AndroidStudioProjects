<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"

android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#ffffff"
android:id="@+id/tbl"
android:layout_margin="15dp"
android:padding="16dp">

    <TableRow android:id="@+id/tr1">
        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:enabled="true"
            android:textSize="45sp"
            android:textColor="#000000"
            android:gravity="right"

            android:id="@+id/ed1"
            />
    </TableRow>
    <TableRow android:gravity="center"
        android:id="@+id/tr2">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:textStyle="bold"
            android:textSize="30sp"
            android:id="@+id/b1"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"
            android:textStyle="bold"
            android:textSize="30sp"
            android:id="@+id/b2"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3"
            android:textStyle="bold"
            android:textSize="30sp"
            android:id="@+id/b3"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="/"
            android:id="@+id/div"
            android:textStyle="italic"
            android:textSize="30sp"
            android:backgroundTint="@color/colorAccent"

            />
    </TableRow>

    <TableRow android:gravity="center"
        android:id="@+id/tr3">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4"
            android:textStyle="bold"
            android:textSize="30sp"
            android:id="@+id/b4"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5"
            android:textStyle="bold"
            android:textSize="30sp"
            android:id="@+id/b5"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6"
            android:textStyle="bold"
            android:textSize="30sp"
            android:id="@+id/b6"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="*"
            android:id="@+id/mul"
            android:textStyle="italic"
            android:textSize="30sp"
            android:backgroundTint="@color/colorAccent"

            />

    </TableRow>

    <TableRow android:gravity="center"
        android:id="@+id/tr4">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7"
            android:textStyle="bold"
            android:textSize="30sp"
            android:id="@+id/b7"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="8"
            android:textStyle="bold"
            android:textSize="30sp"
            android:id="@+id/b8"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="9"
            android:textStyle="bold"
            android:textSize="30sp"
            android:id="@+id/b9"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+"
            android:textStyle="italic"
            android:textSize="30sp"
            android:id="@+id/add"
            android:backgroundTint="@color/colorAccent"

            />
    </TableRow>
    <TableRow android:gravity="center"
        android:id="@+id/tr5">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textStyle="bold"
            android:textSize="30sp"
            android:id="@+id/b0"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear"
            android:textStyle="normal"
            android:textSize="20sp"
            android:id="@+id/clr"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="="
            android:background="#00ff00"
            android:textStyle="bold"
            android:textSize="35sp"
            android:id="@+id/eq"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textStyle="italic"
            android:textSize="35sp"
            android:id="@+id/min"
            android:backgroundTint="@color/colorAccent"

            />
    </TableRow>
</TableLayout>

